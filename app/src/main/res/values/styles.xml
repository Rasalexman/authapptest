<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionMenuTextColor">@color/colorHelper</item>
        <item name="colorControlActivated">@color/colorHelper</item>
        <item name="colorControlHighlight">@color/colorHelper</item>
    </style>

    <style name="Button.MainButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/default_button_width</item>
        <item name="android:layout_height">@dimen/default_items_height</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/button_main</item>
    </style>


    <style name="EditText.MainInput" parent="Widget.AppCompat.EditText">
        <item name="android:gravity">start|top</item>
        <item name="android:textColorHint">@color/colorSecondaryText</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/text_input_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingBottom">@dimen/text_input_pad_bot</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.Light" >
        <item name="actionMenuTextColor">@color/colorHelper</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorHelper</item>
    </style>

    <style name="TextAppearance.Design.Snackbar.Message" parent="android:TextAppearance" tools:override="true">
        <item name="android:textSize">@dimen/text_snackbar_size</item>
    </style>

</resources>
